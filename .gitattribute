# Normalize all text files to use LF
* text=auto eol=lf

# Explicitly mark common source code files as text
*.ts     text eol=lf
*.tsx    text eol=lf
*.js     text eol=lf
*.jsx    text eol=lf
*.json   text eol=lf
*.scss   text eol=lf
*.css    text eol=lf
*.html   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
